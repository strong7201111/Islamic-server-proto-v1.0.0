<%- include('partials/head.ejs') %>
  <title>تسجيل الدخول</title>
</head>
<%- include('partials/header.ejs', { logged: loggedIn, userr: user }) %>

<% if(messages.error) {%>
  <p style="margin-right: 7%;"><%= messages.error %></p>
<% } %>

<div class="row" style="margin: 0 5%">
  <form action="/login" method="POST" style="margin-right: 2rem;">
    <div class="form-group">
      <label for="exampleInputEmail1">البريد الإلكتروني</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="البريد الإلكتروني" name="email" required>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">كلمة السر</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="كلمة السر" name="password" required>
    </div>
    <button type="submit" class="btn btn-success">تسجيل</button>
  </form>
</div>

<%- include('partials/footer.ejs') %>
